@model CoreCodedChatbot.Web.ViewModels.Shared.ConfirmationDialogViewModel

<div class="modal fade" id="@Model.ModalId" tabindex="-1" role="dialog" aria-labelledby="@Model.ModalId-Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="@Model.ModalId-Label">@Model.ModalTitle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Model.BodyText
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="@Model.ModalId-CloseButton" onclick="@Model.CloseFunctionName">@Model.CloseButtonText</button>
                <button type="button" class="btn btn-primary" id="@Model.ModalId-ConfirmButton" onclick="@Model.ConfirmFunctionName">@Model.ConfirmationButtonText</button>
            </div>
        </div>
    </div>
</div>

<script>
    @Html.Raw(Model.CloseButtonAction)

    @Html.Raw(Model.ConfirmationButtonAction)
</script>